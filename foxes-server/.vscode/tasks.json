{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "command": "npm",
            "label": "install",
            "group": "build",

            "args": ["install", "info"]
        },
        {
            "command": "npm",
            "label": "test current",
            "group": "test",

            "args": ["test", "${file}"]
        },
        {
            "command": "npm",
            "label": "test all",
            "group": "test",

            "args": ["test"]
        }
    ]
}